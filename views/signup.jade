extends layout

block content
  .container
      #signupbox.mainbox
          .panel.panel-info
            .panel-heading
              .panel-title Sign Up
              div(style='float:right; font-size: 85%; position: relative; top:-10px')
            .panel-body
              form#signupform.form-horizontal(name="adduser", method="post", action="/users",  enctype="multipart/form-data", role='form')
                .form-group
                  label.col-md-3.control-label Account Type
                  .col-md-9
                    label.radio-inline
                      input#user-radio(type='radio' name='user' value='user' checked=true)
                      |  I am a food lover
                    label.radio-inline
                      input#rest-radio(type='radio' name='user' value='owner')
                      |  I am a restaurant owner
                .form-group
                  label.col-md-3.control-label(for='email') Email
                  .col-md-9
                    input.form-control(type='text', name='email', placeholder='Email Address')
                .form-group.user-only
                  label.col-md-3.control-label(for='name') Name
                  .col-md-9
                    input.form-control(type='text', name='name', placeholder='Name')
                .form-group.restaurant-section(style='display: none')
                  label.col-md-3.control-label(for='restName') Restaurant Name
                  .col-md-9
                    input.form-control(type='text', name='restName' placeholder='Your restaurant name')
                .form-group.user-only
                  label.col-md-3.control-label(for='age') Age
                  .col-md-9
                    input.form-control(type='text', name='age', placeholder='Age')
                .form-group
                  label.col-md-3.control-label(for='password') Password
                  .col-md-9
                    input.form-control#password1(type='password', name='password', placeholder='Password')
                .form-group
                  label.col-md-3.control-label(for='confirmPassword') Confirm Password
                  .col-md-9
                    input.form-control#password2(type='password', name='confirmPassword', placeholder='Password')
                .form-group
                  label.col-md-3.control-label.user-only Favorite cuisines
                  label.col-md-3.control-label.restaurant-section(style='display: none') Restaurant cuisines
                  .col-md-9
                    label.checkbox-inline
                      input(type='checkbox' name='Japanese' value='Japan') 
                      | Japanese Food
                    label.checkbox-inline
                      input(type='checkbox' name='Thai' value='Thai')
                      | Thai Food
                    label.checkbox-inline
                      input(type='checkbox' name='Chinese' value='China')
                      | Chinese Food
                    label.checkbox-inline
                      input(type='checkbox' name='Korean' value='Korea')
                      | Korean Food
                    label.checkbox-inline
                      input(type='checkbox' name='Italian' value='Italy')
                      | Italian Food
                    label.checkbox-inline
                      input(type='checkbox' name='French' value='France')
                      | French Food
                    label.checkbox-inline
                      input(type='checkbox' name='VietNamese' value='VietNam')
                      | VietNamese Food
                    label.checkbox-inline
                      input(type='checkbox' name='Indian' value='India')
                      | Indian Food
                    label.checkbox-inline
                      input(type='checkbox' name='FastFood' value='FastFood')
                      | Fast Food
                .form-group.restaurant-section(style='display: none')
                  label.col-md-3.control-label Restaurant Location
                  .col-md-9
                    input.form-control(type='text', name='location', placeholder='Restaurant Address')
                .form-group
                  label.col-md-3.control-label(for='file') Upload Avatar
                  .col-md-9
                    input.form-control(type='file', name='profilePicture', accept="image/*")
                .form-group
                  .col-md-offset-3.col-md-9
                    button#btn-signup.btn.btn-info(type='submit')
                      i.glyphicon.glyphicon-user
                      | &nbsp; Sign Up