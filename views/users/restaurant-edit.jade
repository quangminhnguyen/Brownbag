extends ../layout

block list
  h2.text-center Edit Restaurant Profile
  .row
    .col-md-3
      .display-block
        h4.text-center Update Restaurant Logo
        form(action='/users/#{restaurant.auth}/avatar', method='post', name='upload-rest-logo', enctype='multipart/form-data', role='form')
          .form-group
            img.img-rounded.img-responsive(alt='Restaurant Logo' src='/avatars/#{restaurant.avatar}')
            input(type='file' accept='image/*' name='profilePicture')
          .form-group
            button.btn.btn-xs.btn-info.active#rest-new-logo-button(type='submit')
              i.glyphicon.glyphicon-upload
              | &nbsp; Upload
    .col-md-9
      .display-block
        h4.text-center Update Restaurant Information
        form.form-horizontal#rest-update-form(action='/users/#{restaurant.auth}/edit', method='put', name='update-restaurant', enctype='application/x-www-form-urlencoded', role = 'form')
          .form-group
            label.col-md-3.control-label Account Type
            .col-md-9
              input.form-control(disabled='disabled', type='text', value='#{accountType}', name='account')        
          .form-group
            label.col-md-3.control-label Email
            .col-md-9
              input.form-control(disabled='disabled', type='email', value='#{displayEmail}', name='email')
          .form-group
            label.col-md-3.control-label Restaurant Name
            .col-md-9
              input.form-control#rest-name-update(type='text', name='name', value='#{restaurant.name}', placeholder='Name of the restaurant')
              .helper#rest-name-edit-helper
          .form-group
            label.col-md-3.control-label Restaurant Location
            .col-md-9
              input.form-control#rest-loc-update(type='text', name='location', value='#{restaurant.location}', placeholder='Location of the restaurant.')
              .helper#rest-loc-edit-helper
          .form-group
            label.col-md-3.control-label Restaurant Cuisines
            .col-md-9
              label.checkbox-inline
                input#r0(type='checkbox' name='Japanese' value='Japan' checked=cbl[0]) 
                | Japanese Food
              label.checkbox-inline
                input#r1(type='checkbox' name='Thai' value='Thai' checked=cbl[1])
                | Thai Food
              label.checkbox-inline
                input#r2(type='checkbox' name='Chinese' value='China' checked=cbl[2])
                | Chinese Food
              label.checkbox-inline
                input#r3(type='checkbox' name='Korean' value='Korea' checked=cbl[3])
                | Korean Food
              label.checkbox-inline
                input#r4(type='checkbox' name='Italian' value='Italy' checked=cbl[4])
                | Italian Food
              label.checkbox-inline
                input#r5(type='checkbox' name='French' value='France' checked=cbl[5])
                | French Food
              label.checkbox-inline
                input#r6(type='checkbox' name='VietNamese' value='VietNam' checked=cbl[6])
                | VietNamese Food
              label.checkbox-inline
                input#r7(type='checkbox' name='Indian' value='India' checked=cbl[7])
                | Indian Food
              label.checkbox-inline
                input#r8(type='checkbox' name='FastFood' value='FastFood' checked=cbl[8])
                | Fast Food
              label.checkbox-inline
                input#r9(type='checkbox' name='Others' value='Others' checked=cbl[9])
                | Others
              .helper#rest-checkbox-edit-helper
          .col-md-offset-3.col-md-9.success-mess#rest-profile-success
          .col-md-offset-3.col-md-9.helper#rest-profile-fail
          .form-group
            .col-md-offset-3.col-md-9
              .btn.btn-info.active#rest-update-prof-btn
                i.glyphicon.glyphicon-wrench
                | &nbsp; Update Profile
  if canUpdatePassword
    .row
      .col-md-offset-3.col-md-9
        .display-block
          h4.text-center Update Password
          form.form-horizontal#rest-update-pass-form(action='/users/#{restaurant.auth}/password', method='put', name='update_restaurant_password', role='form')
            .form-group
              label.col-md-3.control-label Current password
              .col-md-9
                input.form-control#rest-edit-old-pass(type='password', name='old-password', placeholder='Current Password')
                .helper#rest-old-pass-helper
            .form-group
              label.col-md-3.control-label New Password 
              .col-md-9
                input.form-control#rest-edit-new-pass(type='password', name='new-password' placeholder='New Password')
                .helper#rest-new-pass-helper
            .form-group
              label.col-md-3.control-label Confirm New Password
              .col-md-9
                input.form-control#rest-edit-confirm-pass(type='password' name='confirm-new-password' placeholder='Confirm Password')
                .helper#rest-confirm-pass-helper
            .col-md-offset-3.col-md-9.success-mess#rest-pass-success
            .col-md-offset-3.col-md-9.helper#rest-pass-fail
            .form-group
              .col-md-offset-3.col-md-10
                .btn.btn-info.active#rest-update-pass-btn
                  i.glyphicon.glyphicon-wrench
                  | &nbsp; Update password