extends ../layout

block list
  h1.
    #{title}
  table.table.user-list.table-striped.table-bordered.table-hover.text-center
    thead
      tr
        th 
          h4 Logo / Avatar
        th 
          h4 Restaurant Name
        th 
          h4 Cuisines
    - each restaurant, i in restaurants
      tr
        td
          a(href='/users/#{restaurant.auth}')
            img.responsive.img-circle.logo-small(src="/avatars/#{restaurant.avatar}")
        td
          a(href='/users/#{restaurant.auth}')= restaurant.name
        td
          a(href='/users/#{restaurant.auth}')= restaurant.cuisine