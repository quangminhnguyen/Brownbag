- var found_message = 0
if auths.length > 0
  each auth, i in auths
    if (currentUser.accountType == 'RESTAURANT USER') || (auth.email == email) || (currentUser.email == email)
      - found_message = 1
      if auth.name
        .view-convo
          a.btn.btn-info.btn-convo(href='/messages/conversation/#{auth.email} ') View Conversation with &nbsp
            if auth.name
              |#{auth.name}
            else
              |#{auth.email}


if currentUser.email != email
  if found_message == 0 && (currentUser.accountType != 'RESTAURANT USER')
    h3 Send a message
    br
    form.send-message(action='/messages/sendMessage', method='POST')
      input(type="hidden" name="recipient" value="#{email}")
      input.form-control(type='text', name='message', placeholder='Enter message...')
      br
      input#btn-sendmessage.btn.btn-info(type='submit', value='Submit')
